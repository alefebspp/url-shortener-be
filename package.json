{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "prestart": "npm run db:push",
    "worker": "node dist/worker.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "worker:dev": "tsx src/work-runner.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:e2e:wait": "./scripts/wait-for-db.sh",
    "test:e2e:up": "docker compose -f docker-compose.e2e.yml up -d",
    "test:e2e:down": "docker compose -f docker-compose.e2e.yml down -v",
    "test:e2e:migrate": "DOTENV_CONFIG_PATH=.env.test node -r dotenv/config ./node_modules/.bin/drizzle-kit push",
    "test:e2e": "npm run test:e2e:up && npm run test:e2e:wait && npm run test:e2e:migrate && npm run test && npm run test:e2e:down"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bullmq": "^5.65.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.3.3",
    "fastify-type-provider-zod": "^6.1.0",
    "nanoid": "^5.1.6",
    "pg": "^8.14.1",
    "redis": "^5.9.0",
    "supertest": "^7.1.4",
    "tsup": "^8.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
  }
}
